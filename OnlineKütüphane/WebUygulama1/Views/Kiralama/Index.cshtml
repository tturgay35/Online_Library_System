@model List<Kiralama>
@if (TempData["basarili"] != null)
{
    <h4 class="text-success">@TempData["basarili"]</h4>
}

<div class="container">
    <div class="row pt-3 pb-4">
        <h1>Kitap Kiralamaları</h1>
    </div>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Öğrenci Id</th>
            <th>Kitap Adı</th>
            
            

        </tr>
        </thead>
        <tbody>

        @foreach (var kiralama in Model)
        {
            <tr>
                <td>@kiralama.Id</td>
                <td>@kiralama.OgrenciId</td>
                <td>@kiralama.Kitap.KitapAdi</td>
                <td>
                    <a asp-controller="Kiralama" asp-action="EkleGuncelle"  asp-route-id="@kiralama.Id" type="button" class="btn btn-success">Düzenle</a>
                </td>
                <td>
                        <a asp-controller="Kiralama" asp-action="Sil" asp-route-id="@kiralama.Id" type="button" class="btn btn-danger">Sil</a>
                </td>
                

            </tr>
        }
        </tbody>
    </table>
    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Kiralama" asp-action="EkleGuncelle" type="button" class="btn btn-success btn-lg">Yeni Kiralama Kaydı Oluştur</a>
        </div>
    </div>

</div>
