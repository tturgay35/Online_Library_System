@model List<KitapTuru>
@if (TempData["basarili"] != null)
{
    <h4 class="text-success">@TempData["basarili"]</h4>
}

<div class="container">
    <div class="row pt-3 pb-4">
        <h1>Kitap Türleri</h1>
    </div>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Kitap Türü</th>
            

        </tr>
        </thead>
        <tbody>

        @foreach (var kitapTuru in Model)
        {
            <tr>
                <td>@kitapTuru.Id</td>
                <td>@kitapTuru.Ad</td>
                <td>
                    <a asp-controller="KitapTuru" asp-action="Guncelle"  asp-route-id="@kitapTuru.Id" type="button" class="btn btn-success">Düzenle</a>
                </td>
                <td>
                        <a asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@kitapTuru.Id" type="button" class="btn btn-danger">Sil</a>
                </td>
                

            </tr>
        }
        </tbody>
    </table>
    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="KitapTuru" asp-action="Ekle" type="button" class="btn btn-success btn-lg">Yeni Kitap Türü Oluştur</a>
        </div>
    </div>

</div>
